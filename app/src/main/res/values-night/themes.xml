<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainbackground">@color/white_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="add_button_icon">@drawable/ic_button_add_blue</item>
        <item name="note_icon">@drawable/ic_note_item_dark</item>
        <!-- menu. -->
        <item name="popupMenuBackground">@color/white_dark</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- <item name="android:background">@color/black</item> -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainbackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="add_button_icon">@drawable/ic_button_add_pur</item>
        <item name="note_icon">@drawable/ic_note_item_light</item>
        <!-- menu. -->
        <item name="popupMenuBackground">@color/cardview_dark_background</item>
    </style>

    <style name="Theme.Red" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redPrymary</item>
        <item name="colorPrimaryVariant">@color/redPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="mainbackground">@color/redBack</item>
        <!-- <item name="android:background">@color/redBack</item> -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/redSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/redBack</item>
        <item name="add_button_icon">@drawable/ic_button_add_red</item>
        <item name="note_icon">@drawable/ic_note_item_light</item>
        <!-- menu. -->
        <item name="popupMenuBackground">@color/redBack</item>
    </style>
</resources>